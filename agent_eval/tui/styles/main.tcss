/* Main TUI Styling for ARC-Eval Interactive */

/* Global styles */
Screen {
    background: $background;
}

/* Header and Footer */
Header {
    background: $primary;
    color: $text;
    height: 3;
}

Footer {
    background: $primary-darken-1;
    color: $text;
    height: 1;
}

/* Section titles */
.section-title {
    background: $panel;
    color: $text;
    text-style: bold;
    padding: 1;
    border: solid $border;
}

/* File selector styles */
FileSelector {
    background: $surface;
    border: solid $border;
    padding: 1;
    margin: 1;
}

.file-drop-zone {
    background: $surface;
    border: dashed $accent;
    padding: 2;
    text-align: center;
    min-height: 8;
}

.file-drop-zone:hover {
    background: $surface-lighten-1;
    border: solid $accent;
}

.file-drop-zone.dragover {
    background: $accent 20%;
    border: solid $accent;
}

.file-info {
    background: $panel;
    border: solid $border;
    padding: 1;
    margin: 1 0;
}

/* Domain selector */
.domain-selector {
    background: $panel;
    border: solid $border;
    padding: 1;
    margin: 1;
}

/* Progress monitoring */
ProgressMonitor {
    background: $surface;
    border: solid $border;
    padding: 1;
    margin: 1;
}

.stats-row {
    layout: horizontal;
    height: 3;
    align: center middle;
}

.stats-row > Static {
    width: 1fr;
    text-align: center;
    padding: 0 1;
}

/* Results table */
ResultsTable {
    background: $surface;
    border: solid $border;
    margin: 1;
}

DataTable {
    background: $surface;
}

/* Status indicators */
.status-passed {
    color: $success;
    text-style: bold;
}

.status-failed {
    color: $error;
    text-style: bold;
}

.status-warning {
    color: $warning;
    text-style: bold;
}

.severity-critical {
    color: $error;
    background: $error 20%;
    text-style: bold;
}

.severity-high {
    color: $warning;
    background: $warning 20%;
}

.severity-medium {
    color: $accent;
    background: $accent 20%;
}

.severity-low {
    color: $text-muted;
}

/* Buttons with enhanced states */
Button {
    margin: 0 1;
}

Button.-primary {
    background: $primary;
    color: $text;
}

Button.-secondary {
    background: $surface;
    color: $text;
    border: solid $border;
}

Button:hover {
    background: $primary-lighten-1;
}

Button:focus {
    border: thick $accent;
    background: $primary-lighten-1;
}

Button:disabled {
    background: $surface-darken-1;
    color: $text-muted;
    border: solid $border;
}

Button:disabled:hover {
    background: $surface-darken-1;
}

/* Input fields with enhanced focus states */
Input {
    background: $surface;
    border: solid $border;
    padding: 0 1;
}

Input:focus {
    border: thick $accent;
    background: $surface-lighten-1;
}

Input:disabled {
    background: $surface-darken-1;
    color: $text-muted;
    border: solid $border;
}

/* Select widgets */
Select {
    background: $surface;
    border: solid $border;
}

Select:focus {
    border: thick $accent;
    background: $surface-lighten-1;
}

Select:disabled {
    background: $surface-darken-1;
    color: $text-muted;
    border: solid $border;
}

/* Containers */
.horizontal-container {
    layout: horizontal;
    height: auto;
}

.vertical-container {
    layout: vertical;
    width: 100%;
}

/* Progress bars */
ProgressBar {
    background: $surface;
    color: $primary;
    margin: 1 0;
}

/* Action buttons */
.action-buttons {
    layout: horizontal;
    height: 5;
    align: center middle;
    padding: 1;
    background: $panel;
    border: solid $border;
}

.action-buttons Button {
    margin: 0 1;
    min-width: 16;
}

/* Compliance summary */
.compliance-summary {
    background: $panel;
    border: solid $border;
    padding: 1;
    margin: 1 0;
}

.compliance-bar {
    height: 1;
    background: $surface;
    color: $text;
}

/* Modal screens */
ModalScreen {
    align: center middle;
}

.modal-content {
    background: $surface;
    border: thick $border;
    padding: 2;
    margin: 2;
    max-width: 80;
    max-height: 20;
}

/* Help screen */
#help-text {
    background: $surface;
    border: solid $border;
    padding: 2;
    margin: 1;
    overflow-y: auto;
}

/* Landing screen styles - compact and focused */
#landing-main {
    layout: vertical;
    align: center middle;
    height: 100%;
    padding: 2 4;
}

.app-title {
    text-style: bold;
    color: $accent;
    text-align: center;
    padding: 1;
}

.app-subtitle {
    color: $text-muted;
    text-align: center;
    padding: 0 0 2 0;
    text-style: italic;
}

#workflow-container {
    background: $panel;
    border: solid $border;
    padding: 2;
    margin: 1;
    max-width: 70;
    min-width: 60;
    min-height: 18;
}

.workflow-step {
    padding: 0 0 1 0;
    margin: 0;
    min-height: 4;
}

.step-header {
    layout: horizontal;
    height: 1;
    margin: 0 0 1 0;
}

.step-indicator {
    color: $accent;
    text-style: bold;
    width: 10;
}

.step-label {
    text-style: bold;
    color: $text;
    width: 1fr;
}

.file-input-group {
    layout: horizontal;
    height: 3;
    margin: 0 0 1 0;
}

.file-path-input {
    width: 4fr;
    margin: 0 1 0 0;
}

.file-path-input.valid {
    border: solid $success;
}

.file-path-input.invalid {
    border: solid $error;
    background: $error 10%;
}

/* Tooltip styles */
.tooltip {
    background: $surface;
    border: solid $border;
    color: $text;
    padding: 1;
    max-width: 40;
    text-align: left;
}

/* Step indicators with state colors */
.step-indicator.active {
    color: $success;
    text-style: bold;
}

.step-indicator.pending {
    color: $text-muted;
}

.step-indicator.current {
    color: $accent;
    text-style: bold;
}

.domain-select {
    margin: 0 0 1 0;
}

.run-button {
    width: 100%;
    margin: 1 0 0 0;
    padding: 1;
    text-style: bold;
    min-height: 3;
}

.run-button:disabled {
    background: $surface;
    color: $text-muted;
}

/* Footer with version info */
.app-footer {
    padding: 0 1;
    color: $text-muted;
    background: transparent;
    text-align: center;
}

/* File list styles */
.recent-files {
    background: $surface;
    border: solid $border;
    padding: 1;
    max-height: 10;
    overflow-y: auto;
}

.file-item {
    layout: horizontal;
    height: 3;
    padding: 0 1;
    border-bottom: solid $border;
}

.file-item:hover {
    background: $surface-lighten-1;
}

.file-item-name {
    width: 2fr;
    text-style: bold;
}

.file-item-info {
    width: 1fr;
    color: $text-muted;
}

.file-item-actions {
    width: 1fr;
    text-align: right;
}