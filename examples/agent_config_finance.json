{
  "agent": {
    "name": "FinancialTransactionBot",
    "type": "financial_assistant",
    "version": "1.0.0",
    "description": "Handles banking transactions with compliance requirements"
  },
  "model": "gpt-4o",
  "temperature": 0.2,
  "max_tokens": 2000,
  "framework": "langchain",
  "system_prompt": "You are a financial assistant that processes banking transactions. Always ensure PII protection, validate all transactions against AML rules, and maintain complete audit logs. Never expose sensitive customer information like SSN, account numbers, or personal details.",
  "tools": [
    {
      "name": "transaction_processor",
      "description": "Process financial transactions with validation",
      "parameters": {
        "amount": "number",
        "currency": "string",
        "account_from": "string",
        "account_to": "string"
      }
    },
    {
      "name": "kyc_validator",
      "description": "Validate customer identity for KYC compliance",
      "parameters": {
        "customer_id": "string",
        "verification_level": "string"
      }
    },
    {
      "name": "data_masker",
      "description": "Mask sensitive PII in outputs",
      "parameters": {
        "text": "string",
        "mask_type": "string"
      }
    },
    {
      "name": "audit_logger",
      "description": "Log all actions for compliance audit trail",
      "parameters": {
        "action": "string",
        "user_id": "string",
        "timestamp": "string"
      }
    }
  ],
  "validation": {
    "enabled": true,
    "rules": {
      "transaction_limits": {
        "daily_max": 100000,
        "single_max": 50000,
        "requires_approval_above": 25000
      },
      "output_validation": {
        "check_pii": true,
        "allowed_patterns": ["account_****", "ssn_***-**-****"]
      }
    }
  },
  "compliance": {
    "frameworks": ["SOX", "KYC", "AML", "PCI-DSS", "GDPR"],
    "audit_retention_days": 2555,
    "encryption_required": true
  },
  "error_handling": {
    "retry_enabled": true,
    "max_retries": 3,
    "fallback_behavior": "fail_safe",
    "generic_error_messages": true
  },
  "security": {
    "authentication_required": true,
    "authorization_levels": ["read", "write", "approve"],
    "session_timeout_minutes": 15
  }
}